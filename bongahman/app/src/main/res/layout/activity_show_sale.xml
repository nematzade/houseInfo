<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.mohammad.bongahman.ShowSale">


        <LinearLayout
            android:id="@+id/zsad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@color/twColor"
            android:weightSum="4"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:textColor="@color/twColor"
                android:text="از صفر تا صد میلیون:" />

            <TextView
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/twColor"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center" />


        </LinearLayout>


    <LinearLayout
        android:id="@+id/sad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zsad"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="4"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/twColor"
            android:background="@color/colorPrimary"
            android:text="بالای صد میلیون:" />

        <TextView
            android:id="@+id/zeroPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:background="@color/twColor"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:onClick="btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sad"
        android:layout_marginTop="10px"
        android:text="بازگشت به صفحه اصلی"
        android:textAlignment="center" />

</RelativeLayout>
